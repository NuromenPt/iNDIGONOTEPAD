<div class="autosave-warning" id="autosaveWarning">Nota: limpar dados do browser apaga o autosave.</div>
<div class="popup-footer"><button onclick="closePopup('autosavePopup')">Fechar</button></div></div>
<script>
const editor=document.getElementById("editor"),menuButton=document.getElementById("menuButton"),menuDropdown=document.getElementById("menuDropdown"),themePopup=document.getElementById("themePopup"),aboutPopup=document.getElementById("aboutPopup"),autosavePopup=document.getElementById("autosavePopup"),themeItem=document.getElementById("themeItem"),aboutItem=document.getElementById("aboutItem"),autosaveMenuItem=document.getElementById("autosaveMenuItem"),fullscreenItem=document.getElementById("fullscreenItem"),newNoteItem=document.getElementById("newNoteItem"),openFileItem=document.getElementById("openFileItem"),saveFileItem=document.getElementById("saveFileItem"),fileInput=document.getElementById("fileInput"),searchInput=document.getElementById("searchInput"),tabButton=document.getElementById("tabButton"),timeDateButton=document.getElementById("timeDateButton"),autosaveIntervalInput=document.getElementById("autosaveIntervalInput"),autosaveFilenameInput=document.getElementById("autosaveFilenameInput"),autosaveEnableBtn=document.getElementById("autosaveEnableBtn"),autosaveDisableBtn=document.getElementById("autosaveDisableBtn"),autosaveStatus=document.getElementById("autosaveStatus"),autosaveWarning=document.getElementById("autosaveWarning");const THEME_KEY="indigoThemeColor",AUTOSAVE_ENABLED_KEY="indigoAutosaveEnabled",AUTOSAVE_INTERVAL_KEY="indigoAutosaveInterval",AUTOSAVE_CONTENT_KEY="IndigoAutosave.txt",AUTOSAVE_FILENAME_KEY="indigoAutosaveFilename";let autosaveTimer=null;function closePopup(id){const p=document.getElementById(id);if(p)p.style.display="none";}function openPopup(p){p.style.display="block";}menuButton.onclick=()=>menuDropdown.classList.toggle("open");document.addEventListener("click",e=>{if(!menuDropdown.contains(e.target)&&!menuButton.contains(e.target))menuDropdown.classList.remove("open");});document.querySelectorAll(".menu-item").forEach(i=>{i.addEventListener("click",()=>menuDropdown.classList.remove("open"));});themeItem.onclick=()=>openPopup(themePopup);aboutItem.onclick=()=>openPopup(aboutPopup);autosaveMenuItem.onclick=()=>openPopup(autosavePopup);document.querySelectorAll(".theme-option").forEach(o=>{o.onclick=()=>{const c=o.dataset.color;document.documentElement.style.setProperty("--theme-color",c);document.documentElement.style.setProperty("--toolbar-bg",c);try{localStorage.setItem(THEME_KEY,c);}catch(e){}}});const savedTheme=(()=>{try{return localStorage.getItem(THEME_KEY);}catch(e){return null}})();if(savedTheme){document.documentElement.style.setProperty("--theme-color",savedTheme);document.documentElement.style.setProperty("--toolbar-bg",savedTheme);}newNoteItem.onclick=()=>{if(confirm("Limpar nota atual?")){editor.value="";try{localStorage.removeItem(AUTOSAVE_CONTENT_KEY);}catch(e){}}};openFileItem.onclick=()=>fileInput.click();fileInput.onchange=e=>{const f=e.target.files[0];if(!f)return;const r=new FileReader();r.onload=v=>{editor.value=v.target.result;};r.readAsText(f);};saveFileItem.onclick=()=>{const text=editor.value;const blob=new Blob([text],{type:"text/plain"});const url=URL.createObjectURL(blob);const a=document.createElement("a");const nome=prompt("Nome do ficheiro:","nota.txt");if(!nome){URL.revokeObjectURL(url);return;}a.href=url;a.download=nome;a.click();URL.revokeObjectURL(url);};fullscreenItem.onclick=()=>{if(!document.fullscreenElement)document.documentElement.requestFullscreen().catch(()=>{});else document.exitFullscreen().catch(()=>{});};tabButton.onclick=()=>insertAtCursor("\t");timeDateButton.onclick=()=>{const n=new Date(),h=x=>String(x).padStart(2,"0"),compact=`<<${h(n.getHours())}${h(n.getMinutes())}${h(n.getDate())}${h(n.getMonth()+1)}${n.getFullYear()}>>`,readable=n.toLocaleString();insertAtCursor(compact+"\n"+readable);};function insertAtCursor(text){const s=editor.selectionStart,e=editor.selectionEnd,v=editor.value;editor.value=v.slice(0,s)+text+v.slice(e);const p=s+text.length;editor.selectionStart=editor.selectionEnd=p;editor.focus();}searchInput.onkeydown=e=>{if(e.key==="Enter"){e.preventDefault();const q=searchInput.value;if(!q)return;const t=editor.value;let p=editor.selectionEnd,idx=t.indexOf(q,p);if(idx===-1&&p!==0)idx=t.indexOf(q,0);if(idx!==-1){editor.focus();editor.selectionStart=idx;editor.selectionEnd=idx+q.length;}}};function updateAutosaveStatusUI(on,i){if(on){autosaveStatus.textContent=`Autosave ativo a cada ${i} segundos.`;autosaveWarning.style.display="block";}else{autosaveStatus.textContent="Autosave está desativado.";autosaveWarning.style.display="none";}}function startAutosave(i){if(autosaveTimer)clearInterval(autosaveTimer);autosaveTimer=setInterval(()=>{try{localStorage.setItem(AUTOSAVE_CONTENT_KEY,editor.value);localStorage.setItem(AUTOSAVE_FILENAME_KEY,autosaveFilenameInput.value);}catch(e){}},i*1000);}function stopAutosave(){if(autosaveTimer){clearInterval(autosaveTimer);autosaveTimer=null;}}autosaveEnableBtn.onclick=()=>{let i=parseInt(autosaveIntervalInput.value,10);if(isNaN(i)||i<5){i=5;autosaveIntervalInput.value="5";}try{localStorage.setItem(AUTOSAVE_ENABLED_KEY,"1");localStorage.setItem(AUTOSAVE_INTERVAL_KEY,String(i));localStorage.setItem(AUTOSAVE_FILENAME_KEY,autosaveFilenameInput.value);}catch(e){}startAutosave(i);updateAutosaveStatusUI(true,i);};autosaveDisableBtn.onclick=()=>{try{localStorage.setItem(AUTOSAVE_ENABLED_KEY,"0");}catch(e){}stopAutosave();updateAutosaveStatusUI(false,0);};(()=>{let savedContent=null;try{savedContent=localStorage.getItem(AUTOSAVE_CONTENT_KEY);}catch(e){}if(savedContent!==null)editor.value=savedContent;let enabled=false,interval=30,filename="IndigoAutosave.txt";try{enabled=localStorage.getItem(AUTOSAVE_ENABLED_KEY)==="1";const raw=localStorage.getItem(AUTOSAVE_INTERVAL_KEY);if(raw){const p=parseInt(raw,10);if(!isNaN(p)&&p>=5)interval=p;}const fn=localStorage.getItem(AUTOSAVE_FILENAME_KEY);if(fn)filename=fn;}catch(e){}autosaveIntervalInput.value=interval;autosaveFilenameInput.value=filename;if(enabled)startAutosave(interval);updateAutosaveStatusUI(enabled,interval);})();</script>
