;background:var(--theme-color);color:#fff;cursor:pointer;font-size:14px;}.theme-option{margin:4px 0;padding:6px 8px;background:#404060;border-radius:6px;cursor:pointer;display:flex;align-items:center;gap:8px;font-size:13px;}.theme-option .color-dot{width:16px;height:16px;border-radius:999px;border:2px solid rgba(255,255,255,.7);}.theme-option span{white-space:nowrap;}.theme-option:hover{background:#5a5a80;}.autosave-interval,.autosave-field{margin:4px 0 6px;display:flex;flex-direction:column;gap:3px;}.autosave-interval input{padding:5px 7px;border-radius:6px;border:none;background:#33334a;color:#fff;font-size:14px;}.autosave-field input[readonly]{background:#33334a;color:#ddd;border-radius:6px;border:none;padding:5px 7px;font-size:13px;}.autosave-buttons{display:flex;flex-direction:column;gap:6px;margin-top:2px;}.autosave-btn{display:flex;align-items:center;gap:6px;width:100%;padding:8px 9px;border-radius:8px;border:none;background:#404060;color:#fff;cursor:pointer;font-size:13px;text-align:left;}.autosave-btn:hover{background:#5a5a80;}.autosave-status{margin-top:6px;font-size:12px;}.autosave-warning{margin-top:4px;font-size:12px;color:#f7941d;display:none;}.popup-footer{margin-top:10px;display:flex;justify-content:flex-end;}</style>
